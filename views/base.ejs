<%-include("header")-%>


<div class="text-center center-div" id="login">
    <div class="container w-25 border py-5">
        <div class="title pb-5">
            <h2 class="font-weight-bold">
                Login System
            </h2>
            <span>
                Login for the existing user
            </span>
            <% if(locals.logout){%>
                <div class="alert alert-success text-center">
                    <%=logout%>
                </div>
                <%}%>
        </div>
        <form action="/route/login" method="post" class="pt-3">
            <div class="form-group">
                <input type="email" class="form-control" placeholder="EMAIL" name="email">
                <small class="form-text text-muted text-left">Registerd Email Address</small>
            </div>
            <div class="form-group">
                <input type="password" class="form-control" name="password" placeholder="PASSWORD">
            </div>
            <button type="submit" class="btn btn-success rounded-pill mt-3 px-3">Sign In</button>
        </form>
    </div>
</div>


<%-include("header")-%>
